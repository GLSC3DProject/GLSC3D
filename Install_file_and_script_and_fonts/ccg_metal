if [ ${1##*.} = cpp ]
then
c++ ${1} -W -Wall -O2 -I ~/include_metal -L ~/lib -lglsc3d_3_metal -framework Foundation -framework Metal -L/opt/local/lib -lsdl2 -lfreetype -lpng --std=c++11 -o ${1%.cpp}
else
cc ${1} -W -Wall -O2 -I ~/include_metal -lc++ -L ~/lib -lglsc3d_3_metal -framework Foundation -framework Metal -L/opt/local/lib -lsdl2 -lfreetype -lpng -o ${1%.*}
fi
